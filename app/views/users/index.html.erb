<!-- app/views/user/index.html.erb -->

<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>password</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.password %></td>
  </tr>
<% end %>
</table>

<br />
<%=  link_to "Login", :action => :login %>