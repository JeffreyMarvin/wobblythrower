<!-- app/views/user/login.html.erb -->

<% if(flash) %>
  <% if flash[:message]  %>
    <div> <%= flash[:message] %> <br /> <br /> </div>
  <% end %>
  <% if flash[:error]%>
    <div> <%= flash[:error] %> <br /> <br /> </div>
  <% end %>
<% end %>

<%= form_tag :action => 'process_login'%>
  Username: <%= text_field "user", "username" %>&#x00A;
  <br/>
  Password: <%= password_field "user", "password" %>&#x00A;
  <br/>
  <%= submit_tag "Submit" %>
<br />
<br />
<%= link_to "Register", :action => :register %>