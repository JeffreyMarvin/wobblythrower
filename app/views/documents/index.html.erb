<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%=h document.title %></td>
    <td><%=h User.find(document.user_id).username %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% if session[:id] %>
  Logged in as: <%= User.find(session[:id]).username %> <br />
  <%= link_to "Logout", :controller => :users, :action => :logout %>
<% else %>
  <%= link_to "Login", :controller => :users, :action => :login %>
  <%= link_to "Register", :controller => :users, :action => :register %>
<% end %>
<br />
<br />
<%= link_to 'New document', new_document_path %>